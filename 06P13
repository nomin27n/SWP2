int ledPin = 9;  // LED가 연결된 PWM 핀 번호

void setup() {
  // LED 핀을 출력 모드로 설정
  pinMode(ledPin, OUTPUT);
}

void loop() {
  // LED 밝기 점점 밝아지게 (0 → 255)
  for (int brightness = 0; brightness <= 255; brightness++) {
    analogWrite(ledPin, brightness); // PWM 신호로 밝기 조절
    delay(10);  // 변화 속도 조절 (10ms 대기)
  }

  // LED 밝기 점점 어두워지게 (255 → 0)
  for (int brightness = 255; brightness >= 0; brightness--) {
    analogWrite(ledPin, brightness);
    delay(10);  // 변화 속도 조절
  }
}
